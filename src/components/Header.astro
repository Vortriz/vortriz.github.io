---
import Icon from "@/components/Icon.astro";
import ThemeController from "@/components/ThemeController.astro";
---

<header>
    <nav>
        <a href="/">Home</a>
        <button class="hamburger-menu" aria-label="Toggle menu">
            <Icon name="hamburger" />
        </button>
        <div class="right-nav">
            <a href="/coursework">Coursework</a>
            <a href="/publications">Publications</a>
            <a href="/cv.pdf">CV</a>
            <a href="/about">About Me</a>
        </div>
    </nav>
    <ThemeController>
        <button id="theme-toggle" class="theme-toggle" title="Toggle dark mode">
            <Icon name="sun" class="sun" />
            <Icon name="moon" class="moon" />
        </button>
    </ThemeController>
</header>

<style>
    header {
        padding: 20px 100px 40px 100px;
        max-width: 800px;
        margin: 0 auto;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        font-family: "Maple Mono", sans-serif;
        word-spacing: -4px;
    }
    .right-nav {
        display: flex;
        align-items: center;
        gap: 20px;
    }
    nav a {
        color: var(--nav-link-color);
        text-decoration: none;
        font-size: 1rem;
    }
    nav a:hover {
        color: var(--nav-link-hover-color);
    }
    .theme-toggle {
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        color: var(--text-color);
    }

    .theme-toggle .icon-wrapper {
        width: 20px;
        height: 20px;
    }

    .hamburger-menu {
        display: none;
        color: var(--text-color);
    }

    .hamburger-menu .icon-wrapper {
        width: 24px;
        height: 24px;
    }

    @media (max-width: 768px) {
        header {
            padding: 20px 50px 40px 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .theme-toggle {
            top: 27px;
        }

        .right-nav {
            display: none;
            position: absolute;
            top: 60px;
            right: 20px;
            background: var(--bg-color);
            border: 1px solid var(--nav-link-color);
            border-radius: 8px;
            box-shadow: 5px 5px 8px #000000;
            padding: 1rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            z-index: 10;
        }

        .right-nav.is-open {
            display: flex;
        }

        .hamburger-menu {
            display: block;
            background: none;
            border: none;
            cursor: pointer;
            padding: 5px;
            z-index: 20;
        }
    }

    /* Theme toggle icons */
    html:not([data-theme="dark"]) .moon {
        display: none;
    }
    html:not([data-theme="dark"]) .sun {
        display: block;
    }
    html[data-theme="dark"] .sun {
        display: none;
    }
    html[data-theme="dark"] .moon {
        display: block;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Hamburger menu logic
        const hamburgerMenu = document.querySelector(".hamburger-menu");
        const rightNav = document.querySelector(".right-nav");

        if (hamburgerMenu && rightNav) {
            hamburgerMenu.addEventListener("click", () => {
                rightNav.classList.toggle("is-open");
            });
        }
    });
</script>
